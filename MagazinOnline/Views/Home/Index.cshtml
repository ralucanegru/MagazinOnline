@model List<MagazinOnline.Data.Models.Products.Product>

@if (Model.Count > 0)
{
    <div id="carouselExampleControls" class="carousel slide w-75" data-ride="carousel" style="max-height:100%;margin:auto">

        <div class="carousel-inner">
            @for (var index = 0; index < Model.Count; index++)
            {

               @if(index == 0)
                {
                    @if (Model[index].Image != null)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="data:image/gif;base64,@Convert.ToBase64String(Model[index].Image)" alt="@Model[index].Id">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/noPhotoUploaded.png" alt="@Model[index].Id">
                        </div>
                    } }
                else
                {
                    @if (Model[index].Image != null)
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="data:image/gif;base64,@Convert.ToBase64String(Model[index].Image)" alt="@Model[index].Id">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/noPhotoUploaded.png" alt="@Model[index].Id">
                        </div>
                    }
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}